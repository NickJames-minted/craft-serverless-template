{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "The AWS CloudFormation template for this Serverless application",
  "Resources": {
    "ServerlessDeploymentBucket": {
      "Type": "AWS::S3::Bucket"
    },
    "DeployUnderscorespaLogGroup": {
      "Type": "AWS::Logs::LogGroup",
      "Properties": {
        "LogGroupName": "/aws/lambda/DeploytemplateLambda"
      }
    },
    "IamRoleLambdaExecution": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "lambda.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": {
              "Fn::Join": [
                "-",
                [
                  "dev",
                  "myTemplateService",
                  "lambda"
                ]
              ]
            },
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "logs:CreateLogStream"
                  ],
                  "Resource": [
                    {
                      "Fn::Sub": "arn:aws:logs:${AWS::Region}:${AWS::AccountId}:log-group:/aws/lambda/DeploytemplateLambda:*"
                    }
                  ]
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "logs:PutLogEvents"
                  ],
                  "Resource": [
                    {
                      "Fn::Sub": "arn:aws:logs:${AWS::Region}:${AWS::AccountId}:log-group:/aws/lambda/DeploytemplateLambda:*:*"
                    }
                  ]
                }
              ]
            }
          }
        ],
        "Path": "/",
        "RoleName": {
          "Fn::Join": [
            "-",
            [
              "myTemplateService",
              "dev",
              {
                "Fn::Sub": "${AWS::Region}"
              },
              "lambdaRole"
            ]
          ]
        }
      }
    },
    "DeployUnderscorespaLambdaFunction": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "Code": {
          "S3Bucket": {
            "Ref": "ServerlessDeploymentBucket"
          },
          "S3Key": "serverless/myTemplateService/dev/1519106776695-2018-02-20T06:06:16.695Z/myTemplateService.zip"
        },
        "FunctionName": "DeploytemplateLambda",
        "Handler": "services/deploy_spa.lambda_handler",
        "MemorySize": 1024,
        "Role": {
          "Fn::GetAtt": [
            "IamRoleLambdaExecution",
            "Arn"
          ]
        },
        "Runtime": "python2.7",
        "Timeout": 6,
        "Environment": {
          "Variables": {
            "S3_BUCKET": "s3-test-host-bucket",
            "S3_KEY": "test"
          }
        }
      },
      "DependsOn": [
        "DeployUnderscorespaLogGroup",
        "IamRoleLambdaExecution"
      ]
    },
    "DeployUnderscorespaLambdaVersion8vY2wGI77lKWB1zYSFdo8FjtIglBojRCpaC03I8psU": {
      "Type": "AWS::Lambda::Version",
      "DeletionPolicy": "Retain",
      "Properties": {
        "FunctionName": {
          "Ref": "DeployUnderscorespaLambdaFunction"
        },
        "CodeSha256": "RfbzTMpEW9Q2/fRp6ogCMwb1UYWTpPxAbtBSlFYeD0Y="
      }
    },
    "CodeBuild": {
      "Type": "AWS::CodeBuild::Project",
      "Properties": {
        "Name": "templateCodeBuild",
        "ServiceRole": {
          "Fn::GetAtt": [
            "CodeBuildRole",
            "Arn"
          ]
        },
        "Description": "This codebuild deploys template!",
        "Artifacts": {
          "Type": "S3",
          "Location": "template.build",
          "Name": "template.zip"
        },
        "Environment": {
          "Type": "LINUX_CONTAINER",
          "Image": "aws/codebuild/aws/codebuild/nodejs:7.0.0",
          "ComputeType": "BUILD_GENERAL1_SMALL"
        },
        "Source": {
          "Auth": {
            "Type": "OAUTH",
            "Resource": {
              "Fn::GetAtt": [
                "GithubIAMUser",
                "Arn"
              ]
            }
          },
          "Location": "https://github.com/steph-query/craft-serverless",
          "Type": "GITHUB"
        },
        "TimeoutInMinutes": 15
      }
    },
    "CodeBuildRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "codebuild.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "codebuild-service",
            "PolicyDocument": {
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": "*",
                  "Resource": "*"
                }
              ],
              "Version": "2012-10-17"
            }
          }
        ]
      }
    },
    "BuildBucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": "template.build"
      }
    },
    "HostBucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": "s3-test-host-bucket"
      }
    },
    "GithubEventSNSTopic": {
      "Type": "AWS::SNS::Topic",
      "Properties": {
        "DisplayName": "template-GithubEvents",
        "Subscription": [
          {
            "Endpoint": {
              "Fn::GetAtt": [
                "GithubWebhookHandler",
                "Arn"
              ]
            },
            "Protocol": "lambda"
          }
        ]
      }
    },
    "GithubIAMUser": {
      "Type": "AWS::IAM::User",
      "Properties": {
        "UserName": "templateCodeBuild-github-user",
        "Policies": [
          {
            "PolicyName": "templateCodeBuild-github-sns-role",
            "PolicyDocument": {
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": "sns:Publish",
                  "Resource": {
                    "Ref": "GithubEventSNSTopic"
                  }
                }
              ]
            }
          }
        ]
      }
    },
    "GithubIAMUserAccessKey": {
      "Type": "AWS::IAM::AccessKey",
      "Properties": {
        "UserName": {
          "Ref": "GithubIAMUser"
        }
      }
    },
    "GithubWebhookCustomResourceRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": "lambda.amazonaws.com"
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "templateCodeBuild-github-webhook-lambda-execution-role",
            "PolicyDocument": {
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "logs:CreateLogGroup",
                    "logs:CreateLogStream",
                    "logs:PutLogEvents"
                  ],
                  "Resource": "arn:aws:logs:*:*:*"
                }
              ]
            }
          }
        ]
      }
    },
    "GithubWebhookCustomResource": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "Handler": "index.handler",
        "Role": {
          "Fn::GetAtt": [
            "GithubWebhookCustomResourceRole",
            "Arn"
          ]
        },
        "Code": {
          "ZipFile": "./services/js/githubWebhookResources"
        },
        "Runtime": "nodejs6.10",
        "Timeout": 30,
        "Environment": {
          "Variables": {
            "GITHUB_TOKEN": "88a9efb3cfaa2f573432c4a5e272e38b26875f30",
            "GITHUB_REPOSITORY_URL": "https://github.com/steph-query/craft-serverless",
            "GITHUB_TARGET_RESOURCE": "push",
            "SNS_ACCESS_KEY_ID": {
              "Ref": "GithubIAMUserAccessKey"
            },
            "SNS_SECRET_ACCESS_KEY": {
              "Fn::GetAtt": [
                "GithubIAMUserAccessKey",
                "SecretAccessKey"
              ]
            },
            "SNS_REGION": {
              "Ref": "AWS::Region"
            },
            "SNS_TOPIC": {
              "Ref": "GithubEventSNSTopic"
            }
          }
        }
      }
    },
    "GithubWebhook": {
      "Type": "Custom::GithubWebhook",
      "Properties": {
        "ServiceToken": {
          "Fn::GetAtt": [
            "GithubWebhookCustomResource",
            "Arn"
          ]
        },
        "GITHUB_TOKEN": "88a9efb3cfaa2f573432c4a5e272e38b26875f30",
        "GITHUB_REPOSITORY_URL": "https://github.com/steph-query/craft-serverless",
        "GITHUB_TARGET_RESOURCE": "push",
        "SNS_ACCESS_KEY_ID": {
          "Ref": "GithubIAMUserAccessKey"
        },
        "SNS_SECRET_ACCESS_KEY": {
          "Fn::GetAtt": [
            "GithubIAMUserAccessKey",
            "SecretAccessKey"
          ]
        },
        "SNS_REGION": {
          "Ref": "AWS::Region"
        },
        "SNS_TOPIC": {
          "Ref": "GithubEventSNSTopic"
        }
      }
    },
    "BuildStateNotifier": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "Role": {
          "Fn::GetAtt": [
            "LambdaExecutionRole",
            "Arn"
          ]
        },
        "Handler": "index.handler",
        "Runtime": "nodejs6.10",
        "Code": {
          "ZipFile": "./src/functions/build-state-notifier"
        },
        "Timeout": 10,
        "MemorySize": 128,
        "Environment": {
          "Variables": {
            "CODEBUILD_PROJECT_REGION": "us-east-1",
            "GITHUB_TOKEN": "88a9efb3cfaa2f573432c4a5e272e38b26875f30",
            "GITHUB_REPOSITORY_URL": "https://github.com/steph-query/craft-serverless"
          }
        }
      }
    },
    "WebhookHandlerExecutionRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": "lambda.amazonaws.com"
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "templateCodeBuild-webhook-handler-execution-role",
            "PolicyDocument": {
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "logs:CreateLogGroup",
                    "logs:CreateLogStream",
                    "logs:PutLogEvents"
                  ],
                  "Resource": "arn:aws:logs:*:*:*"
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "codebuild:StartBuild"
                  ],
                  "Resource": "arn:aws:codebuild:us-east-1:526449708163:project/templateCodeBuild"
                }
              ]
            }
          }
        ]
      }
    },
    "GithubWebhookHandler": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "Role": {
          "Fn::GetAtt": [
            "WebhookHandlerExecutionRole",
            "Arn"
          ]
        },
        "Handler": "index.handler",
        "Runtime": "nodejs6.10",
        "Code": {
          "ZipFile": "./src/functions/github-webhook-handler"
        },
        "Timeout": 10,
        "MemorySize": 128,
        "Environment": {
          "Variables": {
            "DO_NOT_RUN": false,
            "CODEBUILD_PROJECT_REGION": "us-east-1",
            "CODEBUILD_PROJECT_NAME": "templateCodeBuild",
            "GITHUB_TOKEN": "88a9efb3cfaa2f573432c4a5e272e38b26875f30",
            "GITHUB_REPOSITORY_URL": "https://github.com/steph-query/craft-serverless",
            "GITHUB_TARGET_RESOURCE": "push"
          }
        }
      }
    },
    "LambdaExecutionRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": "lambda.amazonaws.com"
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "templateCodeBuild-lambda-execution-role",
            "PolicyDocument": {
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "logs:CreateLogGroup",
                    "logs:CreateLogStream",
                    "logs:PutLogEvents"
                  ],
                  "Resource": "arn:aws:logs:*:*:*"
                }
              ]
            }
          }
        ]
      }
    },
    "DeployUpdateEventRule": {
      "Type": "AWS::Events::Rule",
      "Properties": {
        "Name": "templateCodeBuild-DeployTrigger",
        "Description": "xxx",
        "EventPattern": {
          "source": [
            "aws.codebuild"
          ],
          "detail-type": [
            "CodeBuild Build State Change"
          ],
          "detail": {
            "project-name": [
              "templateCodeBuild"
            ]
          }
        },
        "Targets": [
          {
            "Arn": {
              "Fn::GetAtt": [
                "BuildStateNotifier",
                "Arn"
              ]
            },
            "Id": "templateCodeBuildBuildStatus"
          }
        ]
      }
    }
  },
  "Outputs": {
    "ServerlessDeploymentBucketName": {
      "Value": {
        "Ref": "ServerlessDeploymentBucket"
      }
    },
    "DeployUnderscorespaLambdaFunctionQualifiedArn": {
      "Description": "Current Lambda function version",
      "Value": {
        "Ref": "DeployUnderscorespaLambdaVersion8vY2wGI77lKWB1zYSFdo8FjtIglBojRCpaC03I8psU"
      }
    }
  }
}